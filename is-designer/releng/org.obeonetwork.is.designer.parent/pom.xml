	<prerequisites>
		<maven>3.0</maven>
	</prerequisites>

	<groupId>org.obeonetwork.is.designer</groupId>
	<artifactId>org.obeonetwork.is.designer.parent</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>org.obeonetwork.is.designer.parent</name>

