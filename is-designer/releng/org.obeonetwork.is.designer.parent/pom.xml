		<module>../../branding/features/org.obeonetwork.is.designer.ui.feature</module>
		<module>../../branding/plugins/org.obeonetwork.is.designer.branding</module>
		<module>../../branding/plugins/org.obeonetwork.is.designer.ui</module>
