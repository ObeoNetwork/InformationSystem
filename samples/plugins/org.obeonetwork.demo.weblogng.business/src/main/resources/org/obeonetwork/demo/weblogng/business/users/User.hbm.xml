<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false">

    <class 
    	name="org.obeonetwork.demo.weblogng.business.users.User" 
    	table="USER"
		dynamic-update="true">

		<!-- Technical ID -->
        <id name="id" type="string" unsaved-value="null" column="ID">
            <generator class="uuid"/>
        </id>

		<!-- Properties -->
        <property name="email">
            <column name="EMAIL"/>
        </property>
        <property name="firstName">
            <column name="FIRST_NAME"/>
        </property>
        <property name="lastName">
            <column name="LAST_NAME"/>
        </property>
        <property name="login">
            <column name="LOGIN"/>
        </property>
        <property name="password">
            <column name="PASSWORD"/>
        </property>
        <property name="telephone">
            <column name="TELEPHONE"/>
        </property>


		<!-- Associations -->

		<!--  ______             ____________
			 | USER |- 1 {-} * -| BLOG_ENTRY |
			  ______             ____________
		-->
		<set name="entries" inverse="true">
			<key column="FK_USER_AUTHOR_USER_ID"/>
			<one-to-many class="org.obeonetwork.demo.weblogng.business.blog.BlogEntry"/>
	     </set>


		<!-- Inheritance -->

		<joined-subclass
			name="org.obeonetwork.demo.weblogng.business.users.Admin" 
    		table="ADMIN"
    	    dynamic-update="true">
    		
    		<key column="FK_INHERITS_USER_ID"/>
    		
			<!-- Properties -->


			<!-- Associations -->


			<!-- Inheritance -->

    	</joined-subclass>

		<joined-subclass
			name="org.obeonetwork.demo.weblogng.business.users.Moderator" 
    		table="MODERATOR"
    	    dynamic-update="true">
    		
    		<key column="FK_INHERITS_USER_ID"/>
    		
			<!-- Properties -->


			<!-- Associations -->


			<!-- Inheritance -->

    	</joined-subclass>


    </class>

</hibernate-mapping>
