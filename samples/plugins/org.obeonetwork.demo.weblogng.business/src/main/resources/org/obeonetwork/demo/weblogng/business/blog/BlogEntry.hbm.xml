<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false">

    <class 
    	name="org.obeonetwork.demo.weblogng.business.blog.BlogEntry" 
    	table="BLOG_ENTRY"
		dynamic-update="true">

		<!-- Technical ID -->
        <id name="id" type="string" unsaved-value="null" column="ID">
            <generator class="uuid"/>
        </id>

		<!-- Properties -->
        <property name="title">
            <column name="TITLE"/>
        </property>
        <property name="creationDate">
            <column name="CREATION_DATE"/>
        </property>
        <property name="content">
            <column name="CONTENT"/>
        </property>


		<!-- Associations -->

		<!--  ____________             ______
			 | BLOG_ENTRY |- * {-} 1 -| USER |
			  ____________             ______
		-->
		<many-to-one 
			class="org.obeonetwork.demo.weblogng.business.users.User"
			column="FK_USER_AUTHOR_USER_ID"
			name="authorUser"
			/>

		<!--  ____________             __________
			 | BLOG_ENTRY |- * {-} * -| CATEGORY |
			  ____________             __________
		-->
		<set name="categories" inverse="true">
			<key column="BLOG_ENTRY_ID"/>
			<many-to-many 
				class="org.obeonetwork.demo.weblogng.business.informations.Category"
				column="CATEGORY_ID"/>
	     </set>


		<!--  ____________             _____
			 | BLOG_ENTRY |- * {-} * -| TAG |
			  ____________             _____
		-->
		<set name="tags" inverse="true">
			<key column="BLOG_ENTRY_ID"/>
			<many-to-many 
				class="org.obeonetwork.demo.weblogng.business.informations.Tag"
				column="TAG_ID"/>
	     </set>


		<!--  ____________             _________
			 | BLOG_ENTRY |- 1 {-} * -| COMMENT |
			  ____________             _________
		-->
		<set name="comments" inverse="true">
			<key column="FK_BLOG_ENTRY_IS_COMMENT_OF_ID"/>
			<one-to-many class="org.obeonetwork.demo.weblogng.business.informations.Comment"/>
	     </set>


		<!-- Inheritance -->


    </class>

</hibernate-mapping>
