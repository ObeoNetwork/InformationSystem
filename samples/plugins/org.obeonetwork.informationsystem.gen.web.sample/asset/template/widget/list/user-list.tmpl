	@version 1.0.0
	@since 0.3.0
	
	Ember.View
	@param {model.User} user
	@generated
-->

<script type="text/x-handlebars" data-template-name="user-list">
	<!-- Start of user code user-list -->
		{{#with content as user}}
		{{#if user.local}}
		<div class="well local">

			{{#if user.localRemove}}
			<div style="float: right;">
				<img class="align-left" src="./asset/img/remove.png" height="24px">
			</div>
			{{/if}}
			{{#if user.localAdd}}
			<div style="float: right;">
				<img class="align-left" src="./asset/img/add.png" height="24px">
			</div>
			{{/if}}
			{{#if user.localUpdate}}
			<div style="float: right;">
				<img class="align-left" src="./asset/img/refresh.png" height="24px">
			</div>
			{{/if}}

			<div class="btn-group">
				<a {{action "editAction" context="user"}} class="btn btn-inverse" href="#"><i class=""></i> 
					{{user.nickname}}
				</a>
				<a class="btn btn-inverse dropdown-toggle" data-toggle="dropdown" href="#">&nbsp;<span class="caret"></span></a>
				<ul class="dropdown-menu">
					<li>
						<a {{action "editAction" context="user"}} href="#"><i class="icon-pencil"></i> Edit</a>
					</li>
					<li>
						<a {{action "removeAction" context="user"}} href="#"><i class="icon-trash"></i> Delete</a>
					</li>
				</ul>
			</div>
			<ul class="user-row">
					<li>{{user.nickname}}</li>
				
					<li>{{user.shortNickname}}</li>
				
					<li>{{user.firstName}}</li>
				
					<li>{{user.lastName}}</li>
				
				{{#if user.chocoProxies}}
				<li>
					Chocos :
					<ul>
					{{#each chocoProxy in user.chocoProxies}}
						<li>
							<a {{action "chocoLink" context="chocoProxy"}} href="#" class="choco-link">{{chocoProxy.desc}} ({{chocoProxy.id}})</a>
						</li>
					{{/each}}
					</ul>
				</li>
				{{/if}}
				
				{{#if user.officeProxy}}
				<li>
					Office :
					<a {{action "officeLink" context="user.officeProxy"}} href="#" class="office-link">{{user.officeProxy.desc}} ({{user.officeProxy.id}})</a>
				</li>
				{{/if}}
				
					<li>{{user.email}}</li>
				
					<li>level : {{user.level}}</li>
				
					<li>xp : {{user.xp}}</li>
				
			</ul>
		</div>
		{{else}}
		<div class="well">

			<div class="btn-group">
				<a {{action "editAction" context="user"}} class="btn btn-inverse" href="#"><i class=""></i> 
					{{user.nickname}}
				</a>
				<a class="btn btn-inverse dropdown-toggle" data-toggle="dropdown" href="#">&nbsp;<span class="caret"></span></a>
				<ul class="dropdown-menu">
					<li>
						<a {{action "editAction" context="user"}} href="#"><i class="icon-pencil"></i> Edit</a>
					</li>
					<li>
						<a {{action "removeAction" context="user"}} href="#"><i class="icon-trash"></i> Delete</a>
					</li>
				</ul>
			</div>
			<ul class="user-row">
					<li>{{user.nickname}}</li>
				
					<li>{{user.shortNickname}}</li>
				
					<li>{{user.firstName}}</li>
				
					<li>{{user.lastName}}</li>
				
				{{#if user.chocoProxies}}
				<li>
					Chocos :
					<ul>
					{{#each chocoProxy in user.chocoProxies}}
						<li>
							<a {{action "chocoLink" context="chocoProxy"}} href="#" class="choco-link">{{chocoProxy.desc}} ({{chocoProxy.id}})</a>
						</li>
					{{/each}}
					</ul>
				</li>
				{{/if}}
				
				{{#if user.officeProxy}}
				<li>
					Office :
					<a {{action "officeLink" context="user.officeProxy"}} href="#" class="office-link">{{user.officeProxy.desc}} ({{user.officeProxy.id}})</a>
				</li>
				{{/if}}
				
					<li>{{user.email}}</li>
				
					<li>level : {{user.level}}</li>
				
					<li>xp : {{user.xp}}</li>
				
			</ul>
		</div>
		{{/if}}
	{{/with}}
	<!-- End of user code -->
</script>

