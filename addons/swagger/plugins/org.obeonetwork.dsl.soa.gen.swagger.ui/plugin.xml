<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.obeonetwork.dsl.soa.gen.swagger.ui.command.SwaggerExport"
            name="Generate Swagger...">
      </command>
      <command
            id="org.obeonetwork.dsl.soa.gen.swagger.ui.command.SwaggerImport"
            name="Import Swagger...">
      </command>
      <command
            id="org.obeonetwork.dsl.soa.gen.swagger.ui.command.ToOpenAPI31"
            name="To OpenAPI 3.1.0">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.obeonetwork.is.designer.menu?after=additions">
         <command
               commandId="org.obeonetwork.dsl.soa.gen.swagger.ui.command.SwaggerExport"
               icon="icons/swagger-logo-16x16.png"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
         <command
               commandId="org.obeonetwork.dsl.soa.gen.swagger.ui.command.SwaggerImport"
               icon="icons/swagger-logo-16x16.png"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
         <menu
               id="org.obeonetwork.dsl.soa.gen.swagger.ui.menu.swagger.convert"
               icon="icons/swagger-logo-16x16.png"
               label="Swagger convert">
            <command
                  commandId="org.obeonetwork.dsl.soa.gen.swagger.ui.command.ToOpenAPI31"
                  label="To OpenAPI 3.1.0"
                  style="push">
	            <visibleWhen
	                  checkEnabled="false">
	               <with
	                     variable="selection">
	                  <iterate
	                        ifEmpty="false">
	                     <test
	                           forcePluginActivation="true"
	                           property="org.obeonetwork.dsl.soa.gen.swagger.ui.propertyTester.testConvertibleSwaggerFile">
	                     </test>
	                  </iterate>
	               </with>
	            </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.obeonetwork.dsl.soa.gen.swagger.ui.handlers.SwaggerExportHandler"
            commandId="org.obeonetwork.dsl.soa.gen.swagger.ui.command.SwaggerExport">
         <enabledWhen>
            <with
                  variable="selection">
               <or>
                  <and>
                     <count
                           value="1">
                     </count>
                     <iterate
                           ifEmpty="false"
                           operator="and">
                        <instanceof
                              value="org.obeonetwork.dsl.soa.System">
                        </instanceof>
                     </iterate>
                  </and>
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <instanceof
                           value="org.obeonetwork.dsl.soa.Component">
                     </instanceof>
                  </iterate>
               </or>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="org.obeonetwork.dsl.soa.gen.swagger.ui.handlers.SwaggerImportHandler"
            commandId="org.obeonetwork.dsl.soa.gen.swagger.ui.command.SwaggerImport">
         <enabledWhen>
            <with
                  variable="selection">
               <count
                     value="1">
               </count>
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <instanceof
                        value="org.obeonetwork.dsl.soa.System">
                  </instanceof>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="org.obeonetwork.dsl.soa.gen.swagger.ui.handlers.SwaggerConverterHandler"
            commandId="org.obeonetwork.dsl.soa.gen.swagger.ui.command.ToOpenAPI31">
         <enabledWhen>
            <with
                  variable="selection">
               <count
                     value="1">
               </count>
               <iterate
                    ifEmpty="false">
                 <test
                       args="ToOpenAPI31Command"
                       forcePluginActivation="true"
                       property="org.obeonetwork.dsl.soa.gen.swagger.ui.propertyTester.testConvertibleSwaggerFile">
                 </test>
	           </iterate>
            </with>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="org.obeonetwork.dsl.soa.gen.swagger.ui.actions.testers.TestConvertibleSwaggerFile"
            id="org.obeonetwork.dsl.soa.gen.swagger.ui.propertyTester.testConvertibleSwaggerFile"
            namespace="org.obeonetwork.dsl.soa.gen.swagger.ui.propertyTester"
            properties="testConvertibleSwaggerFile"
            type="java.lang.Object">
      </propertyTester>
   </extension>
</plugin>
