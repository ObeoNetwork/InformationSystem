<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.obeonetwork.dsl.soa.gen.swagger.ui.command.SwaggerExport"
            name="Generate Swagger...">
      </command>
      <command
            id="org.obeonetwork.dsl.soa.gen.swagger.ui.command.SwaggerImport"
            name="Import Swagger...">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.obeonetwork.is.designer.menu?after=additions">
         <command
               commandId="org.obeonetwork.dsl.soa.gen.swagger.ui.command.SwaggerExport"
               icon="icons/swagger-logo-16x16.png"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
         <command
               commandId="org.obeonetwork.dsl.soa.gen.swagger.ui.command.SwaggerImport"
               icon="icons/swagger-logo-16x16.png"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.obeonetwork.dsl.soa.gen.swagger.ui.handlers.SwaggerExportHandler"
            commandId="org.obeonetwork.dsl.soa.gen.swagger.ui.command.SwaggerExport">
         <enabledWhen>
            <with
                  variable="selection">
               <or>
                  <and>
                     <count
                           value="1">
                     </count>
                     <iterate
                           ifEmpty="false"
                           operator="and">
                        <instanceof
                              value="org.obeonetwork.dsl.soa.System">
                        </instanceof>
                     </iterate>
                  </and>
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <instanceof
                           value="org.obeonetwork.dsl.soa.Component">
                     </instanceof>
                  </iterate>
               </or>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="org.obeonetwork.dsl.soa.gen.swagger.ui.handlers.SwaggerImportHandler"
            commandId="org.obeonetwork.dsl.soa.gen.swagger.ui.command.SwaggerImport">
         <enabledWhen>
            <with
                  variable="selection">
               <count
                     value="1">
               </count>
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <instanceof
                        value="org.obeonetwork.dsl.soa.System">
                  </instanceof>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
   </extension>

</plugin>
